<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Footy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Button" parent="Widget.Material3.Button" >
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Button.Light" parent="Button" >
        <item name="backgroundColor">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Dark" parent="Button" >
        <item name="backgroundColor">@color/darkGrass</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Search" parent="Widget.Material3.SearchBar" >
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="Label" parent="Base.Theme.Footy" >
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Label.Light" parent="Label" >
        <item name="backgroundColor">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Label.Dark" parent="Label" >
        <item name="backgroundColor">@color/darkGrass</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Card" parent="Widget.Material3.CardView.Elevated" >
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="elevation">5dp</item>
    </style>
</resources>