<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_event_minute"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/ic_circle_hollow"
        android:gravity="center"
        android:maxLines="1"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="120'" />

    <ImageView
        android:id="@+id/iv_event_indicator_left"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_event_minute"
        app:layout_constraintEnd_toStartOf="@+id/tv_event_minute"
        app:layout_constraintTop_toTopOf="@+id/tv_event_minute"
        android:src="@drawable/ic_substitute_24dp" />

    <TextView
        android:id="@+id/tv_player_name_left"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_event_indicator_left"
        app:layout_constraintEnd_toStartOf="@+id/iv_event_indicator_left"
        app:layout_constraintTop_toTopOf="@+id/iv_event_indicator_left"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Cristiano Ronaldo"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_player_sub_in_left"
        style="@style/BodyMedium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv_event_indicator_left"
        app:layout_constraintTop_toTopOf="@+id/iv_event_indicator_left"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/darkGrass"
        tools:text="Cristiano Ronaldo"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_player_sub_out_left"
        style="@style/BodySmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv_event_indicator_left"
        app:layout_constraintBottom_toBottomOf="@+id/iv_event_indicator_left"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/red"
        tools:text="Cristiano Ronaldo"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_event_indicator_right"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_event_minute"
        app:layout_constraintStart_toEndOf="@+id/tv_event_minute"
        app:layout_constraintTop_toTopOf="@+id/tv_event_minute"
        android:src="@drawable/ic_football_24dp" />

    <TextView
        android:id="@+id/tv_player_name_right"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_event_indicator_right"
        app:layout_constraintStart_toEndOf="@+id/iv_event_indicator_right"
        app:layout_constraintTop_toTopOf="@+id/iv_event_indicator_right"
        android:layout_marginStart="8dp"
        android:textAlignment="textStart"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Cristiano Ronaldo"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_player_sub_in_right"
        style="@style/BodyMedium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_event_indicator_right"
        app:layout_constraintTop_toTopOf="@+id/iv_event_indicator_right"
        android:layout_marginStart="8dp"
        android:textAlignment="textStart"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/darkGrass"
        tools:text="Cristiano Ronaldo"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_player_sub_out_right"
        style="@style/BodySmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/iv_event_indicator_right"
        app:layout_constraintBottom_toBottomOf="@+id/iv_event_indicator_right"
        android:layout_marginStart="8dp"
        android:textAlignment="textStart"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/red"
        tools:text="Cristiano Ronaldo"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>