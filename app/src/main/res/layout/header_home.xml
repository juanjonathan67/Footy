<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/lime"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/header_match_datetime"
        style="@style/BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        tools:text="Sun, 19 Jun 2024\n09:20" />

    <LinearLayout
        android:id="@+id/header_score_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_match_datetime"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/header_match_score"
            style="@style/TitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2 - 1"/>

        <Button
            android:id="@+id/header_match_label"
            style="@style/Label.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Full Time"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/header_score_ll"
        app:layout_constraintTop_toBottomOf="@id/header_match_datetime"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="16dp">
        
        <ImageView
            android:id="@+id/header_team1_badge"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            tools:src="@drawable/man_utd" />

        <TextView
            android:id="@+id/header_team1_name"
            style="@style/TitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="120dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="center"
            tools:text="Manchester United" />

        <TextView
            android:id="@+id/header_team1_status"
            style="@style/BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxWidth="120dp"
            android:textAlignment="center"
            tools:text="Home"
            tools:textColor="@color/blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/header_score_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_match_datetime"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/header_team2_badge"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            tools:src="@drawable/liverpool" />

        <TextView
            android:id="@+id/header_team2_name"
            style="@style/TitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="120dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAlignment="center"
            tools:text="Liverpool" />

        <TextView
            android:id="@+id/header_team2_status"
            style="@style/BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxWidth="120dp"
            android:textAlignment="center"
            tools:text="Away"
            tools:textColor="@color/red"/>

    </LinearLayout>

    <TextView
        android:id="@+id/header_stadium_name"
        style="@style/BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableStartCompat="@drawable/ic_pitch_24dp"
        android:drawablePadding="4dp"
        tools:text="Old Trafford"/>

    <TextView
        android:id="@+id/header_competition_name"
        style="@style/BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:drawableEndCompat="@drawable/ic_trophy_24dp"
        android:drawablePadding="4dp"
        tools:text="Premier League"/>

</androidx.constraintlayout.widget.ConstraintLayout>