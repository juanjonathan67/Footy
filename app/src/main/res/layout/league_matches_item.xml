<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/team1_badge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/man_utd" />

    <TextView
        android:id="@+id/team1_name"
        style="@style/TitleMedium"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/team1_badge"
        app:layout_constraintTop_toTopOf="@id/team1_badge"
        app:layout_constraintBottom_toBottomOf="@id/team1_badge"
        android:layout_marginStart="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Manchester United"/>

    <TextView
        android:id="@+id/team1_status"
        style="@style/BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/team1_name"
        app:layout_constraintTop_toTopOf="@id/team1_name"
        app:layout_constraintBottom_toBottomOf="@id/team1_name"
        android:layout_marginStart="4dp"
        tools:text="(H)"/>

    <TextView
        android:id="@+id/team1_score"
        style="@style/TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/team1_status"
        app:layout_constraintTop_toTopOf="@id/team1_status"
        app:layout_constraintBottom_toBottomOf="@id/team1_status"
        android:layout_marginStart="12dp"
        tools:text="2"/>

    <TextView
        android:id="@+id/match_status"
        style="@style/BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/team1_score"
        app:layout_constraintBottom_toBottomOf="@id/team1_score"
        android:layout_marginEnd="8dp"
        tools:text="Half Time"/>

    <ImageView
        android:id="@+id/team2_badge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/team1_badge"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/liverpool" />

    <TextView
        android:id="@+id/team2_name"
        style="@style/TitleMedium"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/team2_badge"
        app:layout_constraintTop_toTopOf="@id/team2_badge"
        app:layout_constraintBottom_toBottomOf="@id/team2_badge"
        android:layout_marginStart="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Liverpool"/>

    <TextView
        android:id="@+id/team2_status"
        style="@style/BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/team2_name"
        app:layout_constraintTop_toTopOf="@id/team2_name"
        app:layout_constraintBottom_toBottomOf="@id/team2_name"
        android:layout_marginStart="4dp"
        tools:text="(A)"/>

    <TextView
        android:id="@+id/team2_score"
        style="@style/TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/team2_status"
        app:layout_constraintTop_toTopOf="@id/team2_status"
        app:layout_constraintBottom_toBottomOf="@id/team2_status"
        android:layout_marginStart="12dp"
        tools:text="1"/>

    <TextView
        android:id="@+id/match_date"
        style="@style/BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/team2_score"
        app:layout_constraintBottom_toBottomOf="@id/team2_score"
        android:layout_marginEnd="8dp"
        tools:text="16/04/2024 18:00"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/team2_badge"
        android:layout_marginTop="4dp"
        app:dividerColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>