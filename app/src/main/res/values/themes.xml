<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Footy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Footy" parent="Base.Theme.Footy" />

    <style name="Button" parent="Widget.Material3.Button" >
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAppearance">@style/ButtonText</item>
    </style>

    <style name="Button.Light" parent="Button" >
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Dark" parent="Button" >
        <item name="backgroundTint">@color/darkGrass</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Search" parent="Widget.Material3.SearchBar" >
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="Label" parent="Base.Theme.Footy" >
        <item name="cornerRadius">12dp</item>
        <item name="android:clickable">false</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:textAppearance">@style/LabelText</item>
    </style>

    <style name="Label.Light" parent="Label" >
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Label.Dark" parent="Label" >
        <item name="backgroundTint">@color/darkGrass</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Card" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="android:layout_width">328dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="BottomNavBarCard" >
        <item name="shapeAppearanceOverlay">@style/BottomNavBarCard.Overlay</item>
        <item name="cardBackgroundColor">@color/lime</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="BottomNavBarCard.Overlay" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="BottomNavBar" parent="Widget.Material3.BottomNavigationView" >
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="materialThemeOverlay">@style/BottomNavBar.Overlay</item>
        <item name="itemTextAppearanceActiveBoldEnabled">true</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="BottomNavBar.Overlay" parent="">
        <item name="colorOnSurfaceVariant">@color/darkGray</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">12sp</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="BodyMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="BodySmall">
        <item name="android:textSize">8sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

</resources>